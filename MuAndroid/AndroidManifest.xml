<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="MuMono.MuMono"
          android:versionCode="1"
          android:versionName="1.0">
  <uses-sdk android:minSdkVersion="23" android:targetSdkVersion="35" />
  <uses-feature android:glEsVersion="0x00020000" android:required="true" />

  <!-- Network permissions -->
  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

  <!-- Storage permissions for Android < 10 -->
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="28" />
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />

  <!-- Manage external storage for Android 11+ (optional, for full file access) -->
  <!-- <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" /> -->
	<application android:label="MuMono"
               android:icon="@mipmap/ic_launcher"
               android:roundIcon="@mipmap/ic_launcher"
               android:usesCleartextTraffic="true"
               android:extractNativeLibs="true">
    <!-- Ensure Mono runtime is initialized before any Activity -->
    <provider
        android:name="mono.MonoRuntimeProvider"
        android:authorities="${applicationId}.mono.MonoRuntimeProvider.__mono_init__"
        android:exported="false"
        android:initOrder="1999999999" />
  </application>
</manifest>
